pipeline {
    agent { label 'kogito-cloud' }
    options {
        timeout(time: 120, unit: 'MINUTES')
    }
    environment {
        QUAY_ACCESS_TOKEN = credentials('QUAY_ACCESS_TOKEN')
    }
    stages {
        stage('Clean Images') {
            steps {
                sh 'python3 tools/clean-nightly-tags.py'
            }
        }
    }
}
